.search{border-bottom:1px solid #e4e4e4;height:100rpx;overflow:hidden;background-color:#fff;position: fixed;top: 0;left: 0;width: 100%;z-index: 100}
.search>view{float:left;}
.search .inpt{overflow:hidden;width:94%;background:#e5e5e5;height:80rpx;border-radius:10rpx;margin:0 3%;position:relative;}
.search .btn,.search .inpt{margin-top:10rpx;}
.search .btn{width:20%;background-color:#d40000;text-align:center;color:#fff;height:80rpx;line-height:80rpx;border-radius:10rpx;}
.search .inpt>.left,.search .inpt>.center,.search .inpt>.right{display:block;float:left;}
.search .inpt>.left{width:50rpx;margin:16rpx 20rpx 0 20rpx;height: 50rpx}
.search .inpt>.center{height:100%;position:absolute;top:0;left:80rpx;right:70rpx;}
.searchGoodList{padding-top: 120rpx}
.searchGoodList .li{background-color:#fff;margin-bottom:20rpx;font-size:30rpx;}
.li>.no{position:relative;}
.li>.no::before{content:"";position:absolute;left:0;top:20%;width:2px;height:60%;background-color:#d40000}
.li>.no::after{content:"";position:absolute;right:0;bottom:0;width:98%;height:1px;background-color:#e4e4e4}
.li>.no .date{text-align: center;float:right;width:160rpx;font-size:24rpx;line-height:36rpx;border-left:1px solid #e4e4e4;padding-left:20rpx;margin-top:10rpx;}
.li>view{padding:0 24rpx;height:90rpx;line-height:90rpx;}
.li>.info{overflow:hidden;}
.info>view{float:right;}.info>view text{margin-right:40rpx;}
.t-red{color: red;}