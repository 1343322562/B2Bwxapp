/* pages/boxGoodSeach/boxGoodSeach.wxss */

Page {
  background-color: #fff;
}

.search {
  background-color: #fff;
  display: flex;
  height: 90rpx;
  width: 100%;
}

.search>.item {
  width: 0;
}

.search>.form {
  flex-grow: 4;
  position: relative;
  background-color: #fff;
  height: 70rpx;
  border-radius: 15rpx;
  margin: 15rpx 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.4);
}

.search>.form .icon {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
}

.search>.form input {
  width: 70%;
  margin-left: 80rpx;
  height: 100%;
}

.search>.quit {
  flex-grow: 1;
  text-align: center;
  line-height: 70rpx;
}

.search .openCode {
  position: absolute;
  top: 0;
  right: 10rpx;
  height: 70rpx;
  width: 80rpx;
  text-align: center;
}

.search .openCode>.code {
  width: 50rpx;
  height: 50rpx;
  margin-top: 12rpx;
}

.container {
  position: absolute;
  height: 100vh;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  top: 0;
}

.wholeBox {
  width: 90%;
  min-height: 600rpx;
  background-color: #fff;
  margin: 120rpx auto 0;
  border-radius: 10rpx;
}


.topBackGround{
  height: 100rpx;
background-color: rgb(41, 49, 60);
position: relative;
}
.storesInfoBox{
width: 90%;
background-color: #fff;
position: absolute;
top: 40%;
left: 5%;
border-radius: 25rpx;
box-shadow: 3rpx 1rpx 12rpx #d3d3d3;

}
.storesInfoBox>.storesName{
width: 90%;
margin: 10rpx auto;
line-height: 50rpx;
overflow: hidden;
}

.storesName>.name{
float: left;
font-size: 35rpx;
font-weight: bold;
}
.storesName>.num{
float: right;
vertical-align: middle;
color: #a09f9f;
}
.storesInfoBox>.storesCity{
color: #a09f9f;
width: 90%;
margin: 0 auto;
}

.bossInfo {
  width: 90%;
  margin: 12rpx auto 20rpx;
}
.bossInfo>.content {
  color: #a09f9f;
  vertical-align: middle;
  display: inline-block;
}
.bossInfo>.label {
  vertical-align: middle;
  display: inline-block;
}

.expressInfoBox{
width: 90%;
background-color: #fff;
margin: 170rpx auto 0;
}
.wholeBox .title{
  font-size: 32rpx;
font-weight: bold;
}
.expressInfoBox>.expressInfo{
  width: 95%;
margin: 20rpx auto;
}

.expressInfo>.items{
  line-height: 53rpx;
}
.expressInfo>.items>.content{
  color: #aaa9a9;
  padding-left: 15rpx;
}
.goodInfoBox{
width: 90%;
margin: 50rpx auto 30rpx;

}
.goodInfo{
  margin-top: 30rpx;
  border-bottom: 2rpx solid #eee;
padding-bottom: 15rpx;

}
.goodInfo image{
height: 130rpx;
width: 130rpx;

  background-color: rgb(211, 210, 210);
}
.goodInfo>.content{
  display: inline-block;
margin-left: 15rpx;
width: 75%;
vertical-align: top;
}

.staticProps{
color: #aaa9a9;
float: left;


}
.goodName{
font-size: 30rpx;
}
.props{
  font-size: 24rpx; 
  line-height: 50rpx;

}
.variableParams{
  float: right;
}
.price{
font-size: 30rpx;
text-align: right;
}
.totalPrice,.Num {
color: #aaa9a9;
font-size: 26rpx;
text-align: right;
}

.Num{
  line-height: 50rpx;
}


.confirm{
  border: 1rpx solid #fff;
}

.confirmBtn {
  background-color: rgb(41, 49, 60);
  color: #fff;
  font-size: 1.2em;
  width: 90%;
  margin: 30rpx auto 20rpx;
}

.confirmBtn:active {
  background-color: #67696d;
}

