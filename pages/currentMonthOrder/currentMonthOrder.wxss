/* pages/currentMonthOrder/currentMonthOrder.wxss */
.time-box {
  width: 92%;
  padding: 23rpx 4%;
  display: flex;
  justify-content: space-between;
  color: #555555;
}
.time-box .start{
  display: flex;
  align-items: center;
}

.time-box .end{
  display: flex;
  align-items: center;
}

.time-box text{
  font-size: 30rpx;
}

.input {
  background-color: #fff;
  width: 560rpx;
  margin: 10rpx auto 25rpx;
  border: 1rpx solid #eeeeee;
  border-radius: 15rpx;
  padding: 24rpx 35rpx;
  font-size: 31rpx;
}
.input image {
  
}
.sheetAmt {
  text-align: center;
  font-size: 34rpx;
}

.searchGoodList{padding-top: 20rpx}
.searchGoodList .li{background-color:#fff;margin-bottom:20rpx;font-size:30rpx;}
.li>.no{position:relative;}
.li>.no::before{content:"";position:absolute;left:0;top:20%;width:2px;height:60%;background-color:#d40000}
.li>.no::after{content:"";position:absolute;right:0;bottom:0;width:98%;height:1px;background-color:#e4e4e4}
.li>.no .date{text-align: center;float:right;width:160rpx;font-size:24rpx;line-height:36rpx;border-left:1px solid #e4e4e4;padding-left:20rpx;margin-top:10rpx;}
.li>view{padding:0 24rpx;height:90rpx;line-height:90rpx;}
.li>.info{overflow:hidden;}
.info>view{float:right;}.info>view text{margin-right:40rpx;}
.t-red{color: red;}