<!--components/Navbar/Navbar.wxml-->
<!-- 占位盒子 -->
<view style="height:{{bounding.top + bounding.height + 7}}px;" />

<!-- 固定导航栏 -->
<view class="navbar-box" style="{{style}} height:{{bounding.top + bounding.height + 7}}px;background: {{background}};color: {{color}};">
  <view 
    class="title" 
    style="margin-top:{{bounding.top + 2}}px; height: {{bounding.height}}px; line-height:{{bounding.height}}px;"
  >
    <block wx:if="{{r!=2}}">
      <view class="code" wx:if="{{isShowLeftIcon}}" bindtap="openCode"> 
        <image bindtap='backPage' class='back' src='../../images/code.png' wx:if='{{leftIconStyle != "black"}}'/>
        <view class="content">扫码购</view>
      </view>
    </block>
    <view bindtap='backPage' class='back back-text' wx:if='{{leftIconText || r==2}}'>{{leftIconText || '首页'}}</view>
  
    <image bindtap='backPage' class='back' src='../../images/backBlack.png' wx:if='{{leftIconStyle == "black"}}'/>
    <view bindtap='backPage' style="color:#000;" class='back back-text' wx:if='{{leftIconStyle == "black" && leftIconText}}'>返回</view>
  
    
    <view class="content" style='{{titleStyle}}'>{{title}}</view>
    <slot wx:if="{{r!=2}}"/>
  </view>
</view>
