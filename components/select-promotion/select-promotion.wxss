.select-time-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 13rpx 3%;
  width: 94;
  border-bottom: 8rpx solid #f5f5f5;
}

.select-time-box .btn{
    margin: 0;
    height: 50rpx;
    width: 110rpx;
    font-size: 30rpx;
}

.selecter-time-conainer {
  height: 100vh;
  width: 100%;
  position: fixed;
  z-index: 100;
  top: 0;
  background-color: rgba(0,0,0,.4);
}

.selecter-time-box {
  position: absolute;
  bottom: 0;
  height: 35vh;
  width: 100%;
  background-color: #ffffff;
  transition: height .5s;
  padding-top: 45rpx;
}

.btn-box {
  width: 90%;
  margin: 50rpx 5% 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  letter-spacing: 2rpx;
}

