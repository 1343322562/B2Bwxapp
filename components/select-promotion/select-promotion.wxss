.promo-box {
  width: 86%;
  margin: 20rpx 7%;
  height: 100rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  border: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.promo-box .tag{
  padding: 2rpx 10rpx;
  border-radius: 3rpx;
  font-size: 26rpx;
  background-color:#e60012;
  color:#fff;
}
.promo-box .info{
  font-size: 23rpx;
}

.actPromo {
  border-color: #e60012;
}
.info-box {
  display: flex;
  flex-direction: column;
}