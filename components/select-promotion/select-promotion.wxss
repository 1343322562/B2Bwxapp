.promo-box {
  width: 86%;
  margin: 20rpx 7%;
  min-height: 100rpx;
  padding: 5rpx 40rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  border: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.promo-box .tag{
  padding: 2rpx 10rpx;
  border-radius: 3rpx;
  font-size: 26rpx;
  background-color: #e60012;
  color: #fff;
  white-space: nowrap;
  margin-right: 15rpx;
}
.promo-box .info{
  font-size: 23rpx;
}

.actPromo {
  border-color: #e60012;
}
.info-box {
  display: flex;
  flex-direction: column;
}
.act {
  border-color: #e60012;
}
.swicth{font-size: 33rpx; font-weight: bold; color: #444444;}

.good-box {display: flex;padding: 10rpx 18rpx;align-items: center;}
.good-box .img {height: 140rpx; width: 140rpx;background-color: #eeeeee;}
.good-box .good-prop {flex: 1;height: 140rpx;margin-left: 20rpx;}
.good-box .good-prop .name {font-weight: bold;}
.good-box .good-prop .unit {font-size: 25rpx;color: #666666;display: flex;justify-content: space-between;}
.good-box .good-prop .unit .stock-qty {margin-right: 40rpx;}
.good-box .good-prop .price {margin-top: 20rpx;}
.good-box .good-prop .price .new{color: #f11110;font-weight: bold;font-size: 31rpx;}
.good-box .good-prop .price .old{color: #666666;text-decoration: line-through;font-size: 28rpx;margin-left: 6rpx;}