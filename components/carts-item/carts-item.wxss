@import '../../app.wxss';
.box{margin: 20rpx 0}
.box>.li{position:relative;left:0;width:100%;overflow:hidden;border-bottom:1px solid #e8e8e8;}
.box>.li:last-child{border:none}
.goods{position:relative;padding-top:15rpx;min-height:170rpx;left:0;background-color:#fff;}
.goods.act{transition: left .2s ease-in-out;}
.goods>.checkbox{width:40rpx;height:40rpx;position:absolute;top:50%;margin-top:-20rpx;left:20rpx;border:1px solid #d7d7d7;border-radius:100%;text-align:center;background-color:#fff;}
.goods>.checkbox.act{background-color:#e60012;border-color:#e60012}
.goods>.img{width:150rpx;height:150rpx;position:absolute;overflow:hidden;left:85rpx;background-color: #f2f2f2}
.icon{width: 100%;height: 100%;}
.goods>.info{margin-left:250rpx;}
.goods>.info .name{display:block;width:90%;overflow:hidden;display: -webkit-box; word-break: break-all; -webkit-box-orient: vertical; -webkit-line-clamp:2;text-overflow:ellipsis;}
.goods>.info .size{font-size:26rpx;color:#888;}
.goods>.info .now{font-size:35rpx;color:#FF0000;font-weight:bold}
.goods>.info .before{color:#999;text-decoration:line-through;}
.goods>.info .tag text{display: inline-block;line-height: 30rpx;font-size: 22rpx;border: 1px solid red;color: red;margin-left: 10rpx;border-radius: 10rpx;padding: 0 6rpx;}
.goods>.delete{position:absolute;top:0;right:-180rpx;background-color:#e60012;color:#fff;height:180rpx;line-height:180rpx;width:180rpx;text-align:center;}
.switchPromotiom{color: #666;background-color: #eee;display: inline-block;font-size: 25rpx;border-radius: 20rpx;width: 100rpx;padding: 2rpx 10rpx;margin-left: 15rpx;position: relative;}
.switchPromotiom:after{position: absolute;content: ' ';width: 12rpx;height: 12rpx;border-bottom: 2rpx solid #333;border-right: 2rpx solid #333;transform: rotate(45deg);top: 8rpx;right: 13rpx;}
.goods>.btn{position: absolute;right: 10rpx;bottom: 10rpx;width: 230rpx;height: 80rpx;text-align: center}
.goods>.btn .item{height: 100%;width: 80rpx;position: absolute;top: 0}
.goods>.btn .item>.icon{width: 50rpx;height: 50rpx;margin-top: 15rpx;background-color:#fff;}
.goods>.btn .minus{left: 0}
/* .goods>.btn .num{display: inline-block;line-height:80rpx} */
.goods>.btn .num{display: block;height:60rpx;border-bottom: 1px solid red;width: 36%;margin: 10rpx auto 0 auto;}
.goods>.btn .add{right: 0}
.liquidation{padding-left: 165rpx;position: relative;height: 100rpx;background-color: #fff}
.liquidation>.num{color: #999;font-size:26rpx;}
.liquidation>.num .text{margin-right: 20rpx;}
.liquidation>.total{padding-top: 12rpx;}
.liquidation>.total .money{color:red;font-size: 1.2em;}
.liquidation>.btn{position: absolute;top: 0;right: 0;background-color: #e60012;color: #fff;text-align: center;line-height:100rpx ;width: 120rpx;font-size: 26rpx}
.liquidation>.btn.replenish{right: 120rpx;background-color: #444}
.liquidation>.select{position: absolute;line-height: 100rpx;top:0;left: 20rpx;}
.liquidation>.select .checkbox{float:left;width: 40rpx;height: 40rpx;overflow: hidden;border:1px solid #d7d7d7;border-radius:100%;text-align:center;background-color:#fff;display: block;margin-top:25rpx;}
.liquidation>.select .checkbox>.icon{width: 100%;height: 100%;float: left;}
.liquidation>.select .checkbox.act{background-color:#e60012;border-color:#e60012}
.liquidation>.select .text{padding: 0 20rpx;}
.cartsType{background-color: #fff;overflow: hidden;border-bottom: 1px solid #e4e4e4;padding: 15rpx 20rpx;position: relative}
.cartsType>.type{float: left;border-width: 1px;border-style: solid;text-align: center;padding: 0 10rpx;line-height: 60rpx;font-size: 28rpx;border-radius: 10rpx;}
.cartsType>.type.cw{color: #ffb400;border-color: #ffb400}
.cartsType>.type.dw{color: #04a1ff;border-color: #04a1ff}
.cartsType>.type.sup{color: #ff6060;border-color: #ff6060}
.cartsType>.type .icon{width: 60rpx;height: 60rpx;margin-right: 6rpx;float: left}
.cartsType>.info{float: left;width: 55%;margin-left: 20rpx;}
.cartsType>.info .name{overflow: hidden;white-space: nowrap;text-overflow: ellipsis;width: 100%;line-height: 38rpx;font-size: 28rpx;}
.cartsType>.info .startPrice{margin-right: 20rpx;line-height: 30rpx;font-size: 24rpx;color: #666}
.cartsType>.info .startPrice .text{color: #e60012}
.cartsType>.deleteAll{position: absolute;top: 0;right: 0;text-align: center;height: 100%;width: 100rpx;}
.cartsType>.deleteAll .icon{width: 45rpx;height: 45rpx;margin-top:27rpx;}
.promotionType {width: 100%;background-color: #fff;padding-top: 15rpx;}
.promotionType .typeTag{width: 85%;display: flex;justify-content: f;padding: 0 5% 0 10%;font-size: 26rpx;}
.promotionType .tag{background-color: #FF0000;color: #f5f5f5;padding: 1rpx 15rpx;border-radius: 5rpx;}
.promotionType .promoInfo{margin-left: 20rpx;padding: 2rpx;}
.promotionType .typeInfo{width: 85%;display: flex;justify-content: space-between;padding: 0 5% 0 10%;font-size: 25rpx;line-height: 40rpx;align-items: center;}
.promotionType .content{
  color: #f3a310;
}
.promotionType .go{color: #913e71;font-size: 27rpx;}
.promoBox {margin-bottom: 28rpx;border-radius: 40rpx;width: 100%;background-color: #fff;}
.promoBox .li {padding-bottom: 10rpx;}
.timeLimitSales{
  width: 50rpx;
  height: 45rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.noReturn {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  background-color: #333333;
  white-space: nowrap;
  color: #e6bb31;
  font-size: 19rpx;
  letter-spacing: 2rpx;
  padding: 8rpx 10rpx;
}


.times {
  display: flex !important;
  flex-direction: column !important;
  justify-content: center !important;
  background: #777 !important;
  height: 100rpx !important;
  line-height: 36rpx !important;
  width: 210rpx !important;
}
.times>.areaDate{
  font-size: 20rpx;
  white-space: nowrap;
}
