.goodsList{display: flex;flex-wrap: wrap;padding-left: 20rpx;padding-top: 80rpx;}
.goodsList>.li{background-color: #fff;width: 315rpx;margin: 20rpx 20rpx 0 0rpx;padding: 15rpx;position: relative;height: 490rpx}
.goodsList>.li .img{width: 100%;height: 300rpx;border-radius: 20rpx;background: #f8f8f8;margin-bottom: 15rpx;}
.goodsList>.li .img.act{background-color: #cb1f3a;}
.goodsList>.li .img>.icon{width: 100%;height: 100%;}
.cup_title{position: absolute;top: 30rpx;left: 0;width: 100%;text-align: center;color: #fff;font-size: 40rpx;}
.goodsList>.li .img>.money{position: absolute;top: 100rpx;font-size: 70rpx;left: 0;width: 100%;text-align: center;color: #fff;}
.goodsList>.li .img>.msg{position: absolute;top: 180rpx;left: 0;width: 100%;text-align: center;color: #fff;}
.goodsList>.li .img>.date{position: absolute;top: 222rpx;left: 34rpx;color: #fff;}
.goodsList>.li .img>.date text{display: block;}
.goodsList>.li .name,.goodsList>.li .size{overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.goodsList>.li .size{font-size: 24rpx;color: #777;}
.goodsList>.li .size.act{font-size: 26rpx;color: red;}
.goodsList>.li .price>.now{color: red;font-size: 40rpx;}
.goodsList>.li .price>.before{font-size: 24rpx;color: #777;text-decoration: line-through;margin-left: 15rpx;}
.goodsList>.li .btn{position:absolute;bottom:10rpx;right:20rpx;background-color:#d40000;color:#fff;width:120rpx;text-align:center;line-height:60rpx;font-size: 26rpx;border-radius: 10rpx;}
.goodsList>.li .btn.null{background-color:#ebebeb;}
.info{background-color: #fff;line-height: 80rpx;padding: 0 30rpx;position: fixed;top: 0;left: 0;width: 100%;z-index: 10}
.info>text{color: red;}