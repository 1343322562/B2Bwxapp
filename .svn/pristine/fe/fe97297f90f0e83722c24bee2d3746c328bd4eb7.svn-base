image{width: 40rpx;height: 40rpx}
.head{background-color: #d40000;color: #fff;position: relative;padding: 50rpx  0 140rpx 0 ;}
.head>.img{position: absolute;top: 40rpx;left: 60rpx;overflow: hidden;background-color: #fff;border-radius:100%;width: 120rpx;height: 120rpx;}
.head>.img .icon{width: 100%;height: 100%;margin-top: 10rpx}
.head>.info{margin-left:210rpx;font-size: 26rpx;}
.head>.info .name{font-size: 34rpx}
.head>.btn{width: 100%;position: absolute;left: 0;bottom: 0;display: flex;padding: 10rpx 0;background-color: rgba(255, 255, 255, .25)}
.head>.btn .item{flex-grow: 1;width: 0;height: 80rpx;text-align: center;}
.head>.btn .item:first-child{border-right: 1px solid #fff}
.head>.btn .item>.text{display: block;font-size: 25rpx;margin-top:-5rpx}
.head>.btn .item>.icon{width: 40rpx;height: 40rpx}
.salesman{background-color: #fff;position: relative;overflow: hidden;padding: 30rpx 40rpx;}
.salesman>.icon{display: block;float: left;width: 75rpx;height: 75rpx;}
.salesman>.info{float: left;margin-left: 20rpx;border-left: 1px solid #787878;padding-left: 20rpx}
.salesman>.info .tel{color: #787878}
.salesman>.info .tel>text{padding-left: 30rpx}
.salesman>.callPhone{position: absolute;top: 50%;right: 40rpx;background-color: #f2f2f2;color: #787878;font-size: 26rpx;width: 160rpx;text-align: center;line-height: 60rpx;margin-top: -30rpx}
.btnList{margin-top: 15rpx;background-color: #fff;}
.btnList>.title{padding: 0 20rpx;overflow: hidden;line-height: 80rpx;border-bottom: 1px solid #e4e4e4;}
.btnList>.title .right{display: block;float: right;color: #787878;font-size: 24rpx}
.btnList>.info{display: flex;padding: 20rpx 0;}
.btnList>.info .item{width: 0;flex-grow: 1;border-right: 1rpx solid #e4e4e4;text-align: center;position: relative}
.btnList>.info .item:last-child{border: none}
.btnList>.info .item>.icon{width: 55rpx;height: 55rpx;}
.btnList>.info .item>.text{display: block;color: #787878}
.orderNum{display: inline-block;line-height: 40rpx;text-align: center;padding: 0 10rpx;color: #fff;font-size: 22rpx;border-radius: 100%;position: absolute;top: -5rpx;right: 15rpx;background-color:#d40000;min-width:20rpx}
.hideBlock{position: absolute;top: 0;left: 0;width: 100%;height: 100%;opacity: 0;}