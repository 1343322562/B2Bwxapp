.mask{position:fixed;top:0;left:0;width:100%;bottom:0;background-color:rgba(0,0,0,.4);z-index:100}
.box{background-color: #fff;position: absolute;top: 50%;left: 5%;width: 90%;margin-top: -490rpx}
.box>.title{text-align: center;font-size: 32rpx;margin-top: 25rpx;margin-bottom: 5rpx;}
.box>.msg{font-size: 24rpx;color: #777;text-align: center;letter-spacing: 2rpx;}
.box>.btn{margin-top: 20prx;padding: 20rpx 0;text-align: center}
.box>.btn .item{width: 220rpx;line-height: 70rpx;display: inline-block;margin: 0 30rpx;border-radius: 10rpx;border: 1px solid #000;color: #000}
.box>.btn .item:last-child{background-color: #000;color: #fff;}
.box>.list{border-top: 1px solid #e4e4e4;border-bottom: 1px solid #e4e4e4;height: 690rpx;width: 90%;margin: 0 auto;margin-top: 40rpx;padding: 20rpx 0;}
.box>.list .li{padding-bottom: 20rpx}
.box>.list .li>.title{font-size: 34rpx;}
.box>.list .li>.li2{display: flex;margin-top: 20rpx;flex-wrap: wrap;}
.box>.list .li>.li2 .item{text-align:center;border: 1px solid #000;width: 185rpx;margin: 5rpx 7rpx;padding: 5rpx 0;font-size: 26rpx;position: relative}
.box>.list .li>.li2 .item.act{color: #d40000;border-color: #d40000}
.box>.list .li>.li2 .item.act>.msg{color: #d40000}
.box>.list .li>.li2 .item>.msg{color: #888;font-size: 21rpx;}
.box>.list .li>.li2 .item>.use{position: absolute;top: 0;right: 0;width: 40rpx;height: 35rpx;}
.box>.list .li>.content{background-color: #e4e4e4;margin-top: 30rpx;padding: 10rpx 20rpx;position: relative}
.box>.list .li>.content .li2>.name{font-size: 26rpx;color: #646464}
.box>.list .li>.content .li2>.name .icon{width: 34rpx;height: 34rpx;vertical-align: middle;margin-right: 6rpx;margin-top: -4rpx}
.box>.list .li>.content .li2>.num{overflow: hidden;font-size: 22rpx;color: #646464}
.box>.list .li>.content .li2>.num .l{float: left;margin-left: 20rpx;}
.box>.list .li>.content .li2>.num .r{float: right}
